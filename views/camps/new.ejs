<% include ../partials/header.ejs%>

<div class="container">
      <h1>Create a New Camp</h1>

    <form action="/camps" method="POST">
      <div class="form-group">
        <input class="form-control w-50" type="text" name="name" placeholder="name"/>
        <input class="form-control w-50" type="number" name="price" placeholder="price" min="0.00" step="0.01"/>
        <input class="form-control w-50" type="text" name="image" placeholder="image url"/>
        <input class="form-control w-50" type="text" name="description" placeholder="desription"/>
        <input class="form-control w-50" type="text" name="location" placeholder="location"/>
      </div>
      <button class="btn btn-primary btn-large btn-default">Submit!</button>
    </form>

  <% include ../partials/footer.ejs%>
</div>
